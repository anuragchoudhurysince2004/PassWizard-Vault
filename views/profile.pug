extends base
include ./mixins/password-generator
//- will inplement using mixins after learing error-handeling
block content
  .profile-container
    .proin-header
      h1.primary-heading User login
      h2.secondary-heading= `Username: ${user.username}`
  .password-generator 
    +password-generator
    .saved-password-container.container
      h2.secondary-heading.saved-pass-heading Your Previously stored Passwords !!
      .saved-pass-box
        p.tertiary-heading.website-column-heading Website/Alias
        p.tertiary-heading.website-column-heading Saved Password
      each password in storepass
        .saved-pass-box
          if password.storeWebsite===""||password.storeWebsite===null
            p.website-name Unnamed Entry
            p.saved-password=password.storePassword 
